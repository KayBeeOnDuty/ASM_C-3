@model IEnumerable<ASM_C_3.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="mb-3">Products</h1>

<div class="d-flex justify-content-between mb-3">
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Product
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No products found.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 100px;">Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Description</th>
                <th class="text-center" style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <!-- Image -->
                    <td>
                        @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl"
                                 alt="@p.Name"
                                 class="img-thumbnail rounded"
                                 style="width:80px; height:80px; object-fit:cover;" />
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No image</span>
                        }
                    </td>

                    <!-- Product Info -->
                    <td class="fw-semibold">@p.Name</td>
                    <td>@(p.Category?.Name ?? "—")</td>
                    <td>@(p.Supplier?.Name ?? "—")</td>
                    <td>
                        @if (string.IsNullOrWhiteSpace(p.Description))
                        {
                            <span class="text-muted fst-italic">No description</span>
                        }
                        else
                        {
                            @p.Description
                        }
                    </td>

                    <!-- Actions -->
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Details" asp-route-id="@p.ProductId" class="btn btn-outline-secondary">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@p.ProductId" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@p.ProductId" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
