@model IEnumerable<ASM_C_3.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="mb-3">Products</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Staff"))
{
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Product
        </a>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No products found.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl" alt="@p.Name"
                                 class="img-thumbnail rounded"
                                 style="width:80px; height:80px; object-fit:cover;" />
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No image</span>
                        }
                    </td>

                    <td class="fw-semibold">@p.Name</td>
                    <td>@(p.Category?.Name ?? "—")</td>
                    <td>@(p.Supplier?.Name ?? "—")</td>
                    <td>@(p.Description ?? "—")</td>

                    <td class="text-center">
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Details" asp-route-id="@p.ProductId" class="btn btn-outline-secondary">
                                <i class="bi bi-eye"></i> Details
                            </a>

                            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {
                                <a asp-action="Edit" asp-route-id="@p.ProductId" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@p.ProductId" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <button type="button"
                                        class="btn btn-success"
                                        onclick="showVariantModal(@p.ProductId, '@p.Name')">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Modal chọn Variant -->
<div class="modal fade" id="variantModal" tabindex="-1" aria-labelledby="variantModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="variantModalLabel">Chọn biến thể sản phẩm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="productIdInput" name="productId" />
                    <div class="mb-3">
                        <label class="form-label fw-bold">Biến thể</label>
                        <select id="variantDropdown" name="variantId" class="form-select form-select-lg" required>
                            <option disabled selected>Đang tải...</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Số lượng</label>
                        <input type="number" name="quantity" class="form-control form-control-lg" value="1" min="1" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Hủy
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-cart-plus me-1"></i>Thêm vào giỏ hàng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let modalInstance = null;

        function showVariantModal(productId, productName) {
            console.log('showVariantModal called with productId:', productId, 'productName:', productName);
            
            // Kiểm tra xem các element có tồn tại không
            const productIdInput = document.getElementById('productIdInput');
            const quantityInput = document.querySelector('input[name="quantity"]');
            const variantModalLabel = document.getElementById('variantModalLabel');
            const variantDropdown = document.getElementById('variantDropdown');
            const variantModal = document.getElementById('variantModal');
            
            if (!productIdInput || !quantityInput || !variantModalLabel || !variantDropdown || !variantModal) {
                console.error('Một số element không tồn tại:', {
                    productIdInput: !!productIdInput,
                    quantityInput: !!quantityInput,
                    variantModalLabel: !!variantModalLabel,
                    variantDropdown: !!variantDropdown,
                    variantModal: !!variantModal
                });
                return;
            }
            
            // Khởi tạo modal nếu chưa có
            if (!modalInstance) {
                modalInstance = new bootstrap.Modal(variantModal, { backdrop: false, keyboard: true });
                console.log('Modal instance created');
            }
            
            productIdInput.value = productId;
            quantityInput.value = 1;
            variantModalLabel.innerText = `Chọn biến thể cho "${productName}"`;
            variantDropdown.innerHTML = '<option disabled selected>Đang tải...</option>';

            const url = `/Variant/GetByProduct?productId=${productId}`;
            console.log('Fetching from URL:', url);

            fetch(url)
                .then(response => {
                    console.log('Response status:', response.status, 'ok:', response.ok);
                    if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                    return response.json();
                })
                .then(data => {
                    console.log('Data received:', data);
                    variantDropdown.innerHTML = '';
                    
                    if (data && Array.isArray(data) && data.length > 0) {
                        data.forEach(v => {
                            const opt = document.createElement('option');
                            opt.value = v.variantId;
                            opt.textContent = `${v.name} - ${v.price.toLocaleString()}₫`;
                            variantDropdown.appendChild(opt);
                        });
                        variantDropdown.selectedIndex = 0;
                        console.log('Options added:', data.length);
                    } else if (data && data.message) {
                        variantDropdown.innerHTML = `<option disabled>${data.message}</option>`;
                        console.log('Message:', data.message);
                    } else {
                        variantDropdown.innerHTML = '<option disabled>Không có biến thể nào</option>';
                    }
                    
                    if (modalInstance) {
                        console.log('Showing modal');
                        modalInstance.show();
                    }
                })
                .catch(err => {
                    console.error('Fetch error:', err);
                    variantDropdown.innerHTML = `<option disabled>Lỗi: ${err.message}</option>`;
                    if (modalInstance) {
                        modalInstance.show();
                    }
                });
        }
    </script>
}
