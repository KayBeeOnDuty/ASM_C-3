@model ASM_C_3.Models.Invoice
@{
    ViewData["Title"] = "Invoice Details";
}

<h2>Invoice Details</h2>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Invoice ID</dt>
        <dd class="col-sm-10">@Model.InvoiceId</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.User?.FullName</dd>

        <dt class="col-sm-2">Payment Method</dt>
        <dd class="col-sm-10">@Model.PayMethod</dd>

        <dt class="col-sm-2">Created Date</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("C")</dd>
    </dl>

    <h5>Invoice Details</h5>
    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Variant</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.InvoiceDetails != null && Model.InvoiceDetails.Any())
            {
                foreach (var item in Model.InvoiceDetails)
                {
                    <tr>
                        <td>@item.Variant?.Product?.Name</td>
                        <td>@item.Variant?.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@item.Subtotal.ToString("C")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No items found</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.InvoiceId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>

