@model IEnumerable<ASM_C_3.Models.Invoice>

@{
    var title = (string?)ViewData["Title"] ?? ((User.IsInRole("Admin") || User.IsInRole("Staff")) ? "Invoices" : "My Invoices");
    ViewData["Title"] = title;
}

<h1 class="mb-3">@title</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No invoices found.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>User</th>
                <th>Payment Method</th>
                <th>Created Date</th>
                <th>Status</th>
                <th class="text-end">Total Amount</th>
                <th class="text-center" style="width:300px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in Model)
            {
                var status = invoice.Status;
                var statusBadge = status switch
                {
                    ASM_C_3.Models.OrderStatus.Pending => "badge bg-warning text-dark",
                    ASM_C_3.Models.OrderStatus.Confirmed => "badge bg-primary",
                    ASM_C_3.Models.OrderStatus.Shipped => "badge bg-info text-dark",
                    ASM_C_3.Models.OrderStatus.Completed => "badge bg-success",
                    ASM_C_3.Models.OrderStatus.CancelRequested => "badge bg-secondary",
                    ASM_C_3.Models.OrderStatus.Cancelled => "badge bg-danger",
                    _ => "badge bg-light text-dark"
                };

                <tr>
                    <td>@(invoice.User?.FullName ?? "Unknown")</td>
                    <td>@invoice.PayMethod</td>
                    <td>@invoice.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td><span class="@statusBadge">@status</span></td>
                    <td class="text-end">@String.Format("{0:N0} ₫", invoice.TotalAmount)</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-outline-secondary">Details</a>

                            @* ----- ADMIN / STAFF ACTIONS ----- *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {
                                if (invoice.Status == ASM_C_3.Models.OrderStatus.Pending)
                                {
                                    <form asp-action="ConfirmOrder" method="post" class="d-inline me-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                        <button type="submit" class="btn btn-success">Confirm</button>
                                    </form>

                                    <form asp-action="CancelOrder" method="post" class="d-inline ms-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                        <button type="submit" class="btn btn-danger">Cancel</button>
                                    </form>
                                }
                                else if (invoice.Status == ASM_C_3.Models.OrderStatus.Confirmed)
                                {
                                    <form asp-action="MarkAsShipped" method="post" class="d-inline me-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                        <button type="submit" class="btn btn-info text-white">Mark Shipped</button>
                                    </form>

                                    <form asp-action="CancelOrder" method="post" class="d-inline ms-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                        <button type="submit" class="btn btn-danger">Cancel</button>
                                    </form>
                                }
                                else if (invoice.Status == ASM_C_3.Models.OrderStatus.CancelRequested)
                                {
                                    <form asp-action="ApproveCancel" method="post" class="d-inline me-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                        <button type="submit" class="btn btn-danger">Approve Cancel</button>
                                    </form>

                                    <form asp-action="RejectCancel" method="post" class="d-inline ms-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                        <button type="submit" class="btn btn-secondary">Reject</button>
                                    </form>
                                }
                            }

                            @* ----- USER ACTIONS ----- *@
                            @if (User.IsInRole("User"))
                            {
                                if (invoice.Status == ASM_C_3.Models.OrderStatus.Pending)
                                {
                                    <form asp-action="RequestCancel" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                        <button type="submit" class="btn btn-warning text-dark">Request Cancel</button>
                                    </form>
                                }
                                else if (invoice.Status == ASM_C_3.Models.OrderStatus.Shipped)
                                {
                                    <form asp-action="ConfirmReceived" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                        <button type="submit" class="btn btn-success">I Received</button>
                                    </form>
                                }
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
