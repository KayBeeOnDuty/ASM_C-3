@using ASM_C_3.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trà Nghé IT</title>

    <!-- Bootstrap (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #000000;
            --secondary-color: #e91e63;
            --accent-color: #ff4081;
            --success-color: #4caf50;
            --warning-color: #ff9800;
            --light-bg: #fce4ec;
            --dark-text: #000000;
            --pink-gradient: linear-gradient(135deg, #e91e63 0%, #ad1457 100%);
            --dark-gradient: linear-gradient(135deg, #424242 0%, #000000 100%);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #fce4ec 0%, #f8bbd9 50%, #e1bee7 100%);
            min-height: 100vh;
        }

        .navbar-custom {
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(233, 30, 99, 0.3);
            border-bottom: 2px solid var(--secondary-color);
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--secondary-color) !important;
            font-size: 1.4rem;
        }

        .navbar-brand:hover {
            transform: scale(1.05);
            transition: transform 0.2s ease;
            color: var(--accent-color) !important;
        }

        .nav-link {
            font-weight: 500;
            color: white !important;
            transition: all 0.3s ease;
            position: relative;
        }

        .nav-link:hover {
            color: var(--secondary-color) !important;
            transform: translateY(-2px);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            left: 50%;
            background-color: var(--secondary-color);
            transition: all 0.3s ease;
        }

        .nav-link:hover::after {
            width: 100%;
            left: 0;
        }

        .btn-custom {
            border-radius: 25px;
            font-weight: 500;
            padding: 8px 20px;
            transition: all 0.3s ease;
            border: none;
            background: var(--pink-gradient);
            color: white;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(233, 30, 99, 0.4);
            color: white;
            background: var(--dark-gradient);
        }

        .main-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(233, 30, 99, 0.2);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(233, 30, 99, 0.1);
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .alert-modern {
            border-radius: 15px;
            border: none;
            box-shadow: 0 4px 15px rgba(233, 30, 99, 0.1);
        }

        .footer-custom {
            background: var(--dark-gradient);
            color: white;
            backdrop-filter: blur(10px);
        }

        .dropdown-menu {
            border-radius: 10px;
            border: none;
            box-shadow: 0 10px 30px rgba(233, 30, 99, 0.2);
            background: rgba(255, 255, 255, 0.95);
        }

        .dropdown-item:hover {
            background: var(--pink-gradient);
            color: white;
        }

        .welcome-text {
            color: var(--secondary-color);
            font-weight: 600;
            font-size: 0.9rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        /* Global Button Styles */
        .btn-primary {
            background: var(--pink-gradient) !important;
            border: none !important;
            color: white !important;
            border-radius: 25px !important;
            font-weight: 500 !important;
            transition: all 0.3s ease !important;
        }

        .btn-primary:hover {
            background: var(--dark-gradient) !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 4px 15px rgba(233, 30, 99, 0.4) !important;
        }

        .btn-secondary {
            background: var(--dark-gradient) !important;
            border: none !important;
            color: white !important;
            border-radius: 25px !important;
            font-weight: 500 !important;
            transition: all 0.3s ease !important;
        }

        .btn-secondary:hover {
            background: var(--pink-gradient) !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4) !important;
        }

        .btn-success {
            background: linear-gradient(135deg, #4caf50 0%, #2e7d32 100%) !important;
            border: none !important;
            color: white !important;
            border-radius: 25px !important;
            font-weight: 500 !important;
        }

        .btn-danger {
            background: linear-gradient(135deg, #f44336 0%, #c62828 100%) !important;
            border: none !important;
            color: white !important;
            border-radius: 25px !important;
            font-weight: 500 !important;
        }

        .btn-warning {
            background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%) !important;
            border: none !important;
            color: white !important;
            border-radius: 25px !important;
            font-weight: 500 !important;
        }

        .btn-info {
            background: var(--pink-gradient) !important;
            border: none !important;
            color: white !important;
            border-radius: 25px !important;
            font-weight: 500 !important;
        }

        .btn-outline-primary {
            border: 2px solid var(--secondary-color) !important;
            color: var(--secondary-color) !important;
            background: transparent !important;
            border-radius: 25px !important;
            font-weight: 500 !important;
            transition: all 0.3s ease !important;
        }

        .btn-outline-primary:hover {
            background: var(--pink-gradient) !important;
            color: white !important;
            transform: translateY(-2px) !important;
        }

        .btn-outline-secondary {
            border: 2px solid var(--primary-color) !important;
            color: var(--primary-color) !important;
            background: transparent !important;
            border-radius: 25px !important;
            font-weight: 500 !important;
            transition: all 0.3s ease !important;
        }

        .btn-outline-secondary:hover {
            background: var(--dark-gradient) !important;
            color: white !important;
            transform: translateY(-2px) !important;
        }

        /* Text Colors */
        .text-primary {
            color: var(--secondary-color) !important;
        }

        .text-secondary {
            color: var(--primary-color) !important;
        }

        /* Card Styles */
        .card {
            border: none !important;
            border-radius: 15px !important;
            box-shadow: 0 4px 15px rgba(233, 30, 99, 0.1) !important;
            overflow: hidden !important;
        }

        .card-header {
            background: var(--pink-gradient) !important;
            color: white !important;
            font-weight: 600 !important;
            border: none !important;
        }

        .card-footer {
            background: var(--light-bg) !important;
            border: none !important;
        }

        /* Table Styles */
        .table {
            border-radius: 10px !important;
            overflow: hidden !important;
        }

        .table thead th {
            background: var(--pink-gradient) !important;
            color: white !important;
            border: none !important;
            font-weight: 600 !important;
        }

        .table tbody tr:hover {
            background-color: rgba(233, 30, 99, 0.05) !important;
        }

        /* Form Styles */
        .form-control:focus {
            border-color: var(--secondary-color) !important;
            box-shadow: 0 0 0 0.2rem rgba(233, 30, 99, 0.25) !important;
        }

        .form-label {
            color: var(--primary-color) !important;
            font-weight: 600 !important;
        }

        /* Link Styles */
        a {
            color: var(--secondary-color) !important;
            transition: all 0.3s ease !important;
        }

        a:hover {
            color: var(--accent-color) !important;
            text-decoration: none !important;
        }

        /* Badge Styles */
        .badge {
            border-radius: 10px !important;
            font-weight: 500 !important;
        }

        .badge.bg-primary {
            background: var(--pink-gradient) !important;
        }

        .badge.bg-secondary {
            background: var(--dark-gradient) !important;
        }

        /* Pagination Styles */
        .pagination .page-link {
            color: var(--secondary-color) !important;
            border: 1px solid rgba(233, 30, 99, 0.3) !important;
            border-radius: 8px !important;
            margin: 0 2px !important;
        }

        .pagination .page-link:hover {
            background: var(--pink-gradient) !important;
            color: white !important;
            border-color: var(--secondary-color) !important;
        }

        .pagination .page-item.active .page-link {
            background: var(--pink-gradient) !important;
            border-color: var(--secondary-color) !important;
        }

        /* Modal Styling */
        .modal-content {
            background: white !important;
            border: none !important;
            border-radius: 15px !important;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3) !important;
        }

        .modal-header {
            background: var(--pink-gradient) !important;
            color: white !important;
            border: none !important;
            border-radius: 15px 15px 0 0 !important;
        }

        .modal-title {
            font-weight: 600 !important;
            font-size: 1.1rem !important;
        }

        .modal-body {
            padding: 1.5rem !important;
            background: white !important;
        }

        .modal-footer {
            background: var(--light-bg) !important;
            border: none !important;
            border-radius: 0 0 15px 15px !important;
            padding: 1rem !important;
        }

        .btn-close {
            filter: invert(1) !important;
        }

        /* Modal Backdrop */
        .modal-backdrop {
            display: none !important;
        }

        .modal.show {
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
        }

        .modal-dialog {
            z-index: 1060 !important;
        }

        .modal-content {
            z-index: 1061 !important;
        }

        .modal-dialog {
            margin: 0 !important;
        }

        .modal-dialog-centered {
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            min-height: calc(100% - 1rem) !important;
        }

        .modal-dialog-centered .modal-content {
            max-height: 90vh !important;
            overflow-y: auto !important;
        }

        .modal.show .modal-dialog {
            transform: none !important;
        }

        @@media (max-width: 768px) {
            .main-container {
                margin: 1rem;
                border-radius: 15px;
            }

            .welcome-text {
                font-size: 0.8rem;
                display: none; /* Hide on mobile to save space */
            }

            .navbar-brand {
                font-size: 1.2rem;
            }

            .btn {
                font-size: 0.9rem;
                padding: 6px 15px;
            }
        }

        /* Additional UI Enhancements */
        .modal-header {
            background: var(--pink-gradient) !important;
            color: white !important;
        }

        .modal-footer {
            background: var(--light-bg) !important;
        }

        .breadcrumb {
            background: transparent !important;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: var(--secondary-color) !important;
        }

        .breadcrumb-item.active {
            color: var(--primary-color) !important;
        }

        /* Search and Input Enhancements */
        .input-group-text {
            background: var(--pink-gradient) !important;
            color: white !important;
            border: none !important;
        }

        .form-select:focus {
            border-color: var(--secondary-color) !important;
            box-shadow: 0 0 0 0.2rem rgba(233, 30, 99, 0.25) !important;
        }

        /* Progress Bar */
        .progress-bar {
            background: var(--pink-gradient) !important;
        }

        /* Navbar Toggler for Mobile */
        .navbar-toggler {
            border: 1px solid var(--secondary-color) !important;
        }

        .navbar-toggler-icon {
            filter: brightness(0) saturate(100%) invert(17%) sepia(95%) saturate(7471%) hue-rotate(326deg) brightness(96%) contrast(95%) !important;
        }
    </style>

</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cup-hot-fill me-2"></i> Trà Nghé IT
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <!-- Left Menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill me-1"></i>Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index"><i class="bi bi-box-seam me-1"></i>Products</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Category" asp-action="Index"><i class="bi bi-tags-fill me-1"></i>Categories</a></li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear-fill me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Variant" asp-action="Index"><i class="bi bi-palette me-2"></i>Manage Variants</a></li>
                                    <li><a class="dropdown-item" asp-controller="Supplier" asp-action="Index"><i class="bi bi-truck me-2"></i>Manage Suppliers</a></li>
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Index"><i class="bi bi-people-fill me-2"></i>Manage Users</a></li>
                                    <li><a class="dropdown-item" asp-controller="Invoice" asp-action="Index"><i class="bi bi-receipt me-2"></i>Manage Invoices</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Staff"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="staffMenu" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-briefcase-fill me-1"></i> Staff
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Variant" asp-action="Index"><i class="bi bi-palette me-2"></i>Manage Variants</a></li>
                                    <li><a class="dropdown-item" asp-controller="Supplier" asp-action="Index"><i class="bi bi-truck me-2"></i>Manage Suppliers</a></li>
                                    <li><a class="dropdown-item" asp-controller="Invoice" asp-action="Index"><i class="bi bi-receipt me-2"></i>All Invoices</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Invoice" asp-action="My"><i class="bi bi-receipt me-1"></i>My Invoices</a>
                            </li>
                        }
                    </ul>

                    <!-- Right Menu -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Welcome message in top right -->
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="welcome-text">
                                    <i class="bi bi-person-heart me-1"></i>Xin chào, @User.Identity?.Name!
                                </span>
                            </li>

                            @if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                        <i class="bi bi-cart3 me-1"></i>Cart
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                                            <i class="bi bi-heart-fill"></i>
                                        </span>
                                    </a>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person-gear me-2"></i>Profile</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="CreateStaff"><i class="bi bi-person-plus me-2"></i>Create Staff</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                                            @Html.AntiForgeryToken()
                                            <button class="dropdown-item text-danger" type="submit">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-custom" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-controller="Account" asp-action="Register" style="border-radius: 25px; border-color: var(--secondary-color); color: var(--secondary-color);">
                                    <i class="bi bi-person-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4" style="padding-top: 100px;">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show alert-modern" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show alert-modern" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="main-container">
            <div class="p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer-custom py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3"><i class="bi bi-cup-hot-fill me-2"></i>Trà Nghé IT</h5>
                    <p class="text-white-50">Hệ thống quản lý cửa hàng trà nghệ hiện đại và chuyên nghiệp.</p>
                </div>
                <div class="col-md-3">
                    <h6 class="mb-3">Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none"><i class="bi bi-arrow-right me-1"></i>Về chúng tôi</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none"><i class="bi bi-arrow-right me-1"></i>Chính sách</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none"><i class="bi bi-arrow-right me-1"></i>Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="mb-3">Kết nối</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white-50"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-white-50"><i class="bi bi-instagram fs-4"></i></a>
                        <a href="#" class="text-white-50"><i class="bi bi-twitter fs-4"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4 border-white-50">
            <div class="text-center">
                <small class="text-white-50">&copy; @DateTime.Now.Year <strong>Trà Nghé IT</strong>. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
