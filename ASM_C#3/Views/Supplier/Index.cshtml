@model IEnumerable<ASM_C_3.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h2 class="mb-3">Suppliers</h2>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().ContactInfo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Address)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ContactInfo</td>
                    <td>@item.Address</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.SupplierId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.SupplierId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center">No suppliers found.</td></tr>
        }
    </tbody>
</table>
