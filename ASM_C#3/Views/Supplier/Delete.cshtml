@model ASM_C_3.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h2>Delete Supplier</h2>

<div class="alert alert-warning">
    <h5>Are you sure you want to delete this supplier?</h5>
</div>

<div class="card p-3 mb-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Contact Info</dt>
        <dd class="col-sm-9">@Model.ContactInfo</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SupplierId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
