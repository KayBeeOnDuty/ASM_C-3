@model ASM_C_3.Models.Variant

@{
    ViewData["Title"] = "Variant Details";
    var cultureVN = new System.Globalization.CultureInfo("vi-VN");
}

<h1 class="mb-3">Variant Details</h1>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Price</dt>
        <!-- 🔹 Hiển thị giá theo định dạng tiền VNĐ -->
        <dd class="col-sm-9">@string.Format(cultureVN, "{0:C0}", Model.Price)</dd>

        <dt class="col-sm-3">Is Available</dt>
        <dd class="col-sm-9">
            @if (Model.IsAvailable)
            {
                <span class="badge bg-success">Yes</span>
            }
            else
            {
                <span class="badge bg-danger">No</span>
            }
        </dd>

        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">@Model.Product?.Name</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.VariantId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
