@model ASM_C_3.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2 class="mb-3">Category Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Category ID</dt>
            <dd class="col-sm-9">@Model.CategoryId</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">
                @if (string.IsNullOrWhiteSpace(Model.Description))
                {
                    <span class="text-muted fst-italic">No description provided.</span>
                }
                else
                {
                    @Model.Description
                }
            </dd>

            <dt class="col-sm-3">Total Products</dt>
            <dd class="col-sm-9">@((Model.Products?.Count ?? 0))</dd>
        </dl>

        @if (Model.Products != null && Model.Products.Any())
        {
            <h5 class="mt-4">Products in this Category</h5>
            <table class="table table-bordered table-striped align-middle mt-2">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Supplier</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Products)
                    {
                        <tr>
                            <td>@p.Name</td>
                            <td>
                                @if (string.IsNullOrWhiteSpace(p.Description))
                                {
                                    <span class="text-muted fst-italic">No description</span>
                                }
                                else
                                {
                                    @p.Description
                                }
                            </td>
                            <td>@(p.Supplier?.Name ?? "—")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted fst-italic mt-3">No products in this category.</p>
        }
    </div>

    <div class="card-footer d-flex justify-content-between bg-light">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>

        @* 🔒 Chỉ Admin và Staff có quyền chỉnh sửa *@
        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
        {
            <div>
                <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        }
    </div>
</div>
