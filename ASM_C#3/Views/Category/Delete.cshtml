@model ASM_C_3.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}
<h1 class="mb-3 text-danger">Delete Category</h1>

@if (Model == null)
{
    <div class="alert alert-danger">Category not found.</div>
}
else
{
    <div class="alert alert-warning">
        Are you sure you want to delete this category?
        @if (Model.Products != null && Model.Products.Any())
        {
            <strong> This category still contains products and will not be deleted.</strong>
        }
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Category Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Total Products</dt>
                <dd class="col-sm-9">@((Model.Products == null) ? 0 : Model.Products.Count)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
